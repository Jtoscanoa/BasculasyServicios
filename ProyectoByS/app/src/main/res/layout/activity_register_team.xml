<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ENCABEZADO SUPERIOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logobys"
                android:contentDescription="Logo de la empresa"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Básculas y Servicios"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- SUBTÍTULO -->
        <TextView
            android:text="Registrar Equipo Técnico"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- CONTENIDO EXISTENTE -->
        <Spinner
            android:id="@+id/spinnerRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccione la solicitud"
            android:background="@drawable/button_border_red"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etTeamMembersCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad de miembros del equipo"
            style="@style/TextAppearance.Body"
            android:inputType="number"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnManageMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Integrantes"
            android:background="@drawable/button_border_red"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
