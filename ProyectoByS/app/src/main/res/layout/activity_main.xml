<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ENCABEZADO CON LOGO Y TEXTO CENTRADO COMO TÍTULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logobys"
                android:contentDescription="Logo de la empresa"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Básculas y Servicios"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- SUBTÍTULO "REGISTRAR CLIENTES" CENTRADO Y NEGRO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Clientes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- FORMULARIO -->
        <EditText
            android:id="@+id/etName"
            android:hint="Nombre"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etCedula"
            android:hint="Cédula"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etPhone"
            android:hint="Teléfono (10 dígitos)"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etAddress"
            android:hint="Dirección"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botón personalizado -->
        <Button
            android:id="@+id/btnRegister"
            android:text="Registrar Cliente"
            android:background="@drawable/button_border_red"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Listado de clientes -->
        <TextView
            android:layout_marginTop="24dp"
            android:text="Clientes registrados"
            style="@style/TextAppearance.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnViewEditClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizar/Editar Clientes"
            android:background="@drawable/button_border_red"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:onClick="goToViewEditClients"/>

        <ListView
            android:id="@+id/lvClients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
