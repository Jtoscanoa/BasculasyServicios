<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ENCABEZADO SUPERIOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logobys"
                android:contentDescription="Logo de la empresa"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Básculas y Servicios"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- SUBTÍTULO -->
        <TextView
            android:text="Registrar Soporte Técnico Remoto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- CONTENIDO EXISTENTE -->
        <TextView
            android:text="Seleccionar Servicio Técnico:"
            style="@style/TextAppearance.Body"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerTechnicalServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:text="Medio * (requerido):"
            style="@style/TextAppearance.Body"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etMedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Zoom, Meet, WhatsApp, etc."
            style="@style/TextAppearance.Body"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Link (opcional):"
            style="@style/TextAppearance.Body"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enlace del medio de comunicación"
            style="@style/TextAppearance.Body"
            android:inputType="textUri"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:background="@drawable/button_border_red"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
